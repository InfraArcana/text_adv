<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<CodeBlocks_project_file>
	<FileVersion major="1" minor="6" />
	<Project>
		<Option title="text_adv" />
		<Option pch_mode="2" />
		<Option compiler="gcc" />
		<Build>
			<Target title="debug">
				<Option output="../target/debug/text_adv" prefix_auto="1" extension_auto="1" />
				<Option object_output="../obj/debug/" />
				<Option type="1" />
				<Option compiler="gcc" />
				<Compiler>
					<Add option="-g" />
				</Compiler>
				<ExtraCommands>
					<Add after='cmd /c xcopy /e /y &quot;$(PROJECT_DIR)..\assets\*&quot; &quot;$(PROJECT_DIR)..\target\debug\&quot;' />
					<Add after='cmd /c xcopy /y &quot;$(PROJECT_DIR)..\API\SDL2\SDL2.dll&quot; &quot;$(PROJECT_DIR)..\target\debug\&quot;' />
					<Mode after="always" />
				</ExtraCommands>
			</Target>
			<Target title="release">
				<Option output="../target/release/text_adv" prefix_auto="1" extension_auto="1" />
				<Option object_output="../obj/release/" />
				<Option type="0" />
				<Option compiler="gcc" />
				<Compiler>
					<Add option="-O2" />
				</Compiler>
				<Linker>
					<Add option="-s" />
				</Linker>
				<ExtraCommands>
					<Add after='cmd /c xcopy /e /y &quot;$(PROJECT_DIR)..\assets\*&quot; &quot;$(PROJECT_DIR)..\target\release\&quot;' />
					<Add after='cmd /c xcopy /y &quot;$(PROJECT_DIR)..\API\SDL2\SDL2.dll&quot; &quot;$(PROJECT_DIR)..\target\release\&quot;' />
				</ExtraCommands>
			</Target>
		</Build>
		<Compiler>
			<Add option="-Wnon-virtual-dtor" />
			<Add option="-Wshadow" />
			<Add option="-Winit-self" />
			<Add option="-Wredundant-decls" />
			<Add option="-Wcast-align" />
			<Add option="-Wundef" />
			<Add option="-Wfloat-equal" />
			<Add option="-Winline" />
			<Add option="-Wunreachable-code" />
			<Add option="-Wmissing-declarations" />
			<Add option="-Wmissing-include-dirs" />
			<Add option="-Wswitch-enum" />
			<Add option="-Weffc++" />
			<Add option="-Wmain" />
			<Add option="-pedantic-errors" />
			<Add option="-Wzero-as-null-pointer-constant" />
			<Add option="-std=c++11" />
			<Add option="-Wfatal-errors" />
			<Add option="-Wextra" />
			<Add option="-Wall" />
			<Add option="-fno-exceptions" />
			<Add option="-fno-rtti" />
			<Add directory="../API/SDL2/include" />
		</Compiler>
		<Linker>
			<Add option="-lmingw32 -lSDL2main -lSDL2" />
			<Add directory="../API/SDL2/lib" />
		</Linker>
		<Unit filename="../src/main.cpp" />
		<Extensions>
			<code_completion />
			<envvars />
			<debugger />
			<lib_finder disable_auto="1" />
		</Extensions>
	</Project>
</CodeBlocks_project_file>
